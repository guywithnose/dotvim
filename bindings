" vim: filetype=vim
map <leader>w :update<return>
imap <Leader>w <esc>:update<return>
map <Leader>q :exit<return>
imap <Leader>q <esc>:exit<return>
map <Leader>s :update<return>:PhpCs<return>
imap <Leader>s <esc>:update<return>:PhpCs<return>
map <Leader>ns :update<return>:PhpCsNoWarnings<return>
imap <Leader>ns <esc>:update<return>:PhpCsNoWarnings<return>
map <Leader>t :update<return>:Phpunit<return>
imap <Leader>t <esc>:update<return>:Phpunit<return>
map <Leader>ct :update<return>:PhpunitCoverage<return>
imap <Leader>ct <esc>:update<return>:PhpunitCoverage<return>
map <Leader>f :update<return>:PhpunitCurrentFunction<return>
imap <Leader>f <esc>:update<return>:PhpunitCurrentFunction<return>
map <Leader>' :<c-u>SyntasticToggleMode<return>
imap <Leader>' <c-o>:SyntasticToggleMode<return>
map <Leader>d :update<return>:call DockerBuild()<return>
imap <Leader>d <esc>:update<return>:call DockerBuild()<return>
nmap <c-p> :CtrlP<return>
map <Leader>p :<c-u>EnableFastPHPFolds<return>
map <Leader><F5> :<c-u>source ~/.vimrc<return>
map <Leader>j :<c-u>call SplitArray()<return>
imap <Leader>j <esc>:call SplitArray()<return>
cnoremap <c-p> <up>
cnoremap <c-n> <down>
nmap <Leader><Space> :call Stab()<return>
nnoremap <F5> :<c-u>silent nohlsearch<return><c-l>
xnoremap * :<c-u>call VSetSearch()<return>/<C-r>=@/<return><return>
xnoremap # :<c-u>call VSetSearch()<return>?<C-r>=@/<return><return>
nnoremap & :&&<return>
xnoremap & :&&<return>

" Change windows
nmap <c-h> <c-w>h
nmap <c-j> <c-w>j
nmap <c-k> <c-w>k
nmap <c-l> <c-w>l

" Git
map <Leader>gp :<c-u>call PushCurrentBranch()<return>
map <Leader>gpf :<c-u>call PushCurrentBranchForce()<return>
map <Leader>gs :<c-u>Gstatus<return>

" Copy
nmap <c-c> "+yy
vmap <c-c> "+y

" Force myself to learn hjkl
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>
imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>
