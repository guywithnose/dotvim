" vim: filetype=vim
noremap <leader>w :update<return>
inoremap <Leader>w <esc>:update<return>
noremap <Leader>q :exit<return>
inoremap <Leader>q <esc>:exit<return>
noremap <Leader>' :<c-u>SyntasticToggleMode<return>
inoremap <Leader>' <c-o>:SyntasticToggleMode<return>
noremap <Leader>a :NERDTreeToggle<return>
nnoremap <c-p> :CtrlP<return>
cnoremap %% <c-r>=fnameescape(expand('%:h')).'/'<return>
nmap <leader>ep :CtrlP %%<return>
noremap <Leader>p :<c-u>EnableFastPHPFolds<return>
vnoremap < <gv
vnoremap < <gv
cnoremap <c-p> <up>
cnoremap <c-n> <down>
nnoremap <Leader><Space> :call Stab()<return>
nnoremap <F5> :<c-u>silent nohlsearch<return><c-l>
xnoremap * :<c-u>call VSetSearch()<return>/<C-r>=@/<return><return>
xnoremap # :<c-u>call VSetSearch()<return>?<C-r>=@/<return><return>
nnoremap & :&&<return>
xnoremap & :&&<return>
nnoremap _$ :call Preserve("%s/\\s\\+$//e")<CR>
nnoremap _= :call Preserve("normal gg=G")<CR>
vnoremap < <gv
vnoremap > >gv

" Open and souce vimrc file
execute 'nnoremap <Leader>ev :tabnew ' . expand('<sfile>:h') . '/vimrc<return>:lcd ' . expand('<sfile>:h') . '<return>'
noremap <Leader>sv :<c-u>source ~/.vimrc<return>

" Change windows
nnoremap <c-h> <c-w>h
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-l> <c-w>l

" Copy
nnoremap <c-c> "+yy
vnoremap <c-c> "+y

" Force myself to learn hjkl
noremap <up> <nop>
noremap <down> <nop>
noremap <left> <nop>
noremap <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>

" Sideways
noremap <Leader>sl :SidewaysLeft<return>
noremap <Leader>sh :SidewaysRight<return>
omap aa <Plug>SidewaysArgumentTextobjA
xmap aa <Plug>SidewaysArgumentTextobjA
omap ia <Plug>SidewaysArgumentTextobjI
xmap ia <Plug>SidewaysArgumentTextobjI
