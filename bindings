" vim: filetype=vim
map <Leader>w :update<return>
imap <Leader>w <c-o>:update<return>
map <Leader>q :x<return>
imap <Leader>q <c-o>:x<return>
map <Leader>s :update<return>:PhpCs<return>
imap <Leader>s <c-o>:update<return><c-o>:PhpCs<return>
map <Leader>ns :update<return>:PhpCsNoWarnings<return>
imap <Leader>ns <c-o>:update<return><c-o>:PhpCsNoWarnings<return>
map <Leader>t :update<return>:Phpunit<return>
imap <Leader>t <c-o>:update<return><c-o>:Phpunit<return>
map <Leader>ct :update<return>:PhpunitCoverage<return>
imap <Leader>ct <c-o>:update<return><c-o>:PhpunitCoverage<return>
map <Leader>f :update<return>:PhpunitCurrentFunction<return>
imap <Leader>f <c-o>:update<return><c-o>:PhpunitCurrentFunction<return>
map <Leader>' :SyntasticToggleMode<return>
imap <Leader>' <c-o>:SyntasticToggleMode<return>
map <Leader>d :call DockerBuild()<return>
imap <Leader>d <c-o>:call DockerBuild()<return>
nmap <c-p> :CtrlP<return>
map <Leader>p :EnableFastPHPFolds<return>
map <Leader><F5> :source ~/.vimrc<return>
map <Leader>j :call SplitArray()<return>
imap <Leader>j <c-o>:call SplitArray()<return>
cnoremap <c-p> <up>
cnoremap <c-n> <down>

" Git
map <Leader>gp :call PushCurrentBranch()<return>
map <Leader>gpf :call PushCurrentBranchForce()<return>
map <Leader>gs :Gstatus<return>

" Copy and paste
nmap <c-c> "+yy
vmap <c-c> "+y
map <c-v> "+p

" Force myself to learn hjkl
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>
imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>
