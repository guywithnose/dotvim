:autocmd BufWritePost */src/dotvim/* source %
:autocmd BufWritePost /home/*/.tmux.conf silent !tmux source %

function! TogglePhpcsWarnings()
  let l:currentPhpcsExec = g:syntastic_php_phpcs_exec
  if strpart(l:currentPhpcsExec, strlen(l:currentPhpcsExec) - 1) == 's'
    let g:syntastic_php_phpcs_exec = g:syntastic_php_phpcs_exec . "n"
  else
    let g:syntastic_php_phpcs_exec = strpart(l:currentPhpcsExec, 0, strlen(l:currentPhpcsExec) - 1)
  endif
endfunction

function! ToggleQuickSave()
  let l:currentGoMetalinterExec = g:syntastic_go_gometalinter_exec
  if strpart(l:currentGoMetalinterExec, strlen(l:currentGoMetalinterExec) - 5) == 'Quick'
    let g:syntastic_go_gometalinter_exec = strpart(l:currentGoMetalinterExec, 0, strlen(l:currentGoMetalinterExec) - 5)
  else
    let g:syntastic_go_gometalinter_exec = g:syntastic_go_gometalinter_exec . "Quick"
  endif
endfunction
