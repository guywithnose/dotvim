" vim: filetype=vim

" Detect whitespace at the end of lines
function! CountTrailingWhitespaceLines()
  let searchCount = 0
  normal G$
  let flags = "w"
  while search('\s\+$', flags)
    normal j0
    let searchCount += 1
    let flags = "W"
  endwhile
  if searchCount > 0
    echo 'Found' searchCount 'lines with trailing whitespace'
  endif
endfunction

" Run a command without moving the cursor
function! Preserve(command)
  let _s=@/
  let l = line(".")
  let c = col(".")
  execute a:command
  let @/=_s
  call cursor(l, c)
endfunction
