" vim: filetype=vim
" PHP
autocmd FileType php setlocal textwidth=144
autocmd FileType php match ErrorMsg '\%>144v.\+'
autocmd FileType phtml match ErrorMsg '\%>144v.\+'

" C++
autocmd FileType cpp match ErrorMsg '\%>80v.\+'

" Git
autocmd Filetype gitcommit setlocal spell textwidth=72

" Text
autocmd Filetype text setlocal spell

" Markdown
autocmd Filetype markdown setlocal spell

" Python
autocmd FileType python setlocal tabstop=1 shiftwidth=1 softtabstop=1

" Ruby
autocmd FileType ruby setlocal tabstop=2 shiftwidth=2 softtabstop=2

" CoffeeScript
autocmd FileType coffee setlocal tabstop=2 shiftwidth=2 softtabstop=2

" Javascript
autocmd BufNewFile,BufRead *.js setfiletype javascript
autocmd FileType javascript setlocal tabstop=2 shiftwidth=2 softtabstop=2 suffixesadd+=.js

" HTML
autocmd FileType html setlocal tabstop=2 shiftwidth=2 softtabstop=2
autocmd FileType htmldjango setlocal tabstop=2 shiftwidth=2 softtabstop=2

" Mustache/Handlebars
autocmd FileType mustache setlocal tabstop=2 shiftwidth=2 softtabstop=2

" Twig
autocmd FileType twig setlocal tabstop=2 shiftwidth=2 softtabstop=2
autocmd FileType twig setfiletype htmldjango

" CSS
autocmd FileType css setlocal tabstop=2 shiftwidth=2 softtabstop=2

" Less
autocmd FileType less setlocal tabstop=2 shiftwidth=2 softtabstop=2

" Opa
autocmd FileType opa setlocal tabstop=2 shiftwidth=2 softtabstop=2

" Stylus
autocmd FileType stylus setlocal tabstop=2 shiftwidth=2 softtabstop=2

" Vim
autocmd FileType vim setlocal tabstop=2 shiftwidth=2 softtabstop=2

" WDDX
autocmd BufNewFile,BufRead *.wddx setfiletype xml

" Mutt Mail
autocmd BufRead /tmp/mutt-* setlocal textwidth=78 formatoptions=croql

" JSON
autocmd BufNewFile,BufRead *.json setfiletype javascript

" Apache
autocmd BufNewFile,BufRead */*vhosts*.conf setfiletype apache

" Make
autocmd FileType make setlocal noexpandtab

" Dockerfile
autocmd BufRead,BufNewFile Dockerfile setfiletype dockerfile
