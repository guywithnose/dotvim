" vim: filetype=vim
command! W w
command! Wa wa
command! Q q
command! Qa qa
cnoremap w!! SudoWrite

command! PhpCs !php -l % && phpcs -n %
command! PhpCsNoWarnings !php -l % && phpcs %

command! Phpunit !phpunit --stop-on-failure %
command! PhpunitCoverage !phpunit --stop-on-failure --coverage-html coverage %
command! PhpunitCurrentFunction execute '!phpunit --verbose --filter ' . cfi#get_func_name() . ' %'
