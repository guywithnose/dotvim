" vim: filetype=vim
set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set backspace=indent,eol,start
set autoindent
set incsearch
set hlsearch
set scrolloff=3
set autoread
set background=dark
set number
set relativenumber
set modeline
set statusline=%<%F%y\ %h%m%r%{fugitive#statusline()}%=%a\ %q%k\ %b\ %l\\%L,%c%V\ %p%%\ b:%n
set laststatus=2
set nrformats=
set wildmode=longest,list
set history=1000
set ignorecase
set smartcase
colorscheme slate

if has("autocmd")
  autocmd BufWinLeave * silent! mkview
  autocmd BufWinEnter * silent! loadview
  autocmd BufWritePost * silent call Preserve(":call CountTrailingWhitespaceLines()")
endif

syntax on
filetype on
filetype plugin indent on
