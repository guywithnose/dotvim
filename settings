" vim: filetype=vim
set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set backspace=indent,eol,start
set autoindent
set incsearch
set hlsearch
set scrolloff=3
set autoread
set background=dark
set number
set relativenumber
set modeline
set statusline=%<%f\ %h%m%r%{fugitive#statusline()}%=%-14.(%l,%c%V%)\ %P
set laststatus=2
set nrformats=
set wildmode=longest,list
set history=1000
colorscheme slate

autocmd BufWinLeave *.* mkview
autocmd BufWinEnter *.* silent loadview

syntax on
filetype on
filetype plugin indent on
